@using EGCad.Common.Infrastructure
@model EGCad.Models.CalculationParameterModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Model.AdditionalPointCount = (int?)Session["AdditionalPointCount"] ?? 0;
    Model.Normilize = (NormalizeType?)Session["Normilize"] ?? NormalizeType.None;
    Model.StatCalculation = (StatCalculationType?)Session["StatCalculationType"] ?? StatCalculationType.None;
}

<div class="page-header">
    <h2>Способ расчета</h2>
</div>

@using (Html.BeginForm())
{

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-4"><label class="form-control-static ">Количество дополнительных точек:</label></div>
            <div class="col-sm-8"><input type="number" id="AdditionalPointCount" name="AdditionalPointCount" class="form-control" placeholder="5" /></div>
        </div>

        <div class="form-group">
            <div class="col-sm-4"><label class="form-control-static ">Cпособ нормирования:</label></div>
            <div class="col-sm-8">@Html.EnumDropDownListFor(x => x.Normilize)</div>
        </div>

        <div class="form-group">
            <div class="col-sm-4"><label class="form-control-static ">Способ расчета статистического расстояния:</label></div>
            <div class="col-sm-8">@Html.EnumDropDownListFor(x => x.StatCalculation)</div>
        </div>
        <input type="submit" class="btn btn-primary" value="Сохранить" />
    </div>
}