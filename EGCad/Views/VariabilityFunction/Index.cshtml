@using EGCad.Common.Infrastructure.MVC
@model EGCad.Common.Model.VariabilityFunction.VariabilityFunction
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="container" style="margin-top: 30px"></div>
@if (Model != null)
{
	<script type="text/javascript">
		$(function () {
			chart1 = new Highcharts.Chart({
				chart: {
					type: 'line',
					renderTo: 'container'
				},
				title: {
					text: 'Обобщенная функция изменчивости',
					x: -20 //center
				},
				xAxis: {
					categories: @Model.Values.Select(v=>v.R).SerializeObject(),
					title: {
						text:"Расстояние от фронта намыва, м"
					},
					min:0
				},
				yAxis: {
					plotLines: [{
						value: 0,
						width: 1,
						color: '#fff'
					}],
					title: {
						enable:false,
						text:""
					},
					max:1,
					min:0
				},
				series: [{
					name: 'Обощенная функция изменчивости',
					data: @Model.Values.Select(val=>val.VariabilityValue).SerializeObject()
					}]
			});
		});
	</script>
}
